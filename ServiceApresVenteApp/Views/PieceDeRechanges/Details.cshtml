@model ServiceApresVente.Models.PieceDeRechange

@{
    ViewData["Title"] = "Details";
}

<h1>Détails de la Pièce de Rechange</h1>

<!-- Détails de la pièce de rechange -->
<div>
    <h4>Informations</h4>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Référence</th>
                <th>Prix</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Nom)</td>
                <td>@Html.DisplayFor(model => model.Reference)</td>
                <td>@Html.DisplayFor(model => model.Prix)</td>
                <td>@Html.DisplayFor(model => model.Stock)</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Boutons de navigation -->
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
