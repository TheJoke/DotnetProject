@model ServiceApresVente.Models.Reclamation

@{
    ViewData["Title"] = "Details";
}

<h1>Détails de la Réclamation</h1>

<!-- Détails de la réclamation -->
<div>
    <h4>Informations</h4>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Description</th>
                <th>Statut</th>
                <th>Date de Réclamation</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Description)</td>
                <td>@Html.DisplayFor(model => model.Statut)</td>
                <td>@Html.DisplayFor(model => model.DateReclamation)</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Boutons de navigation -->
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
