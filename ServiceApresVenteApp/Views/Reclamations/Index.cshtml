@model IEnumerable<ServiceApresVente.Models.Reclamation>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Réclamations</h1>

<!-- Bouton pour créer une nouvelle réclamation (visible uniquement pour les clients) -->
@if (User.IsInRole("Client"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">Créer une Nouvelle Réclamation</a>
    </p>
}

<!-- Tableau des réclamations -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Référence de l'Article</th>
            <th>Nom de l'Article</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Statut)</th>
            <th>@Html.DisplayNameFor(model => model.DateReclamation)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Article?.Reference</td>
                <td>@item.Article?.Nom</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Statut)</td>
                <td>@Html.DisplayFor(modelItem => item.DateReclamation)</td>
                <td>
                    @if (User.IsInRole("Client"))
                    {
                        <!-- Actions pour les clients -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Modifier</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                    }
                    else
                    {
                        <!-- Actions pour les responsables -->
                        @if (item.Statut == ServiceApresVente.Models.StatutReclamation.EnAttente)
                        {
                            <a asp-action="EditForResponsable" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Traiter</a>
                        }
                        else
                        {
                            <a asp-action="GetInterventionByReclamationId" asp-route-id="@item.Id" class="btn btn-success btn-sm">Interventions</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
